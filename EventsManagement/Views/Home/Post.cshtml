
@{
	Layout = null;
}

<!DOCTYPE html>

<style type="text/css">
	body {
		margin: 0;
		padding: 0;
		text-align: center;
	}

	form {
		display: inline-block;
	}

	body {
		background: #DAE2F8; /* fallback for old browsers */
		background: -webkit-linear-gradient(to right, #D6A4A4, #DAE2F8); /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(to right, #D6A4A4, #DAE2F8); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	}

	button {
		/* default for <button>, but useful for <a> */
		display: inline;
		text-align: center;
		text-decoration: none;
		/* create a small space when buttons wrap on 2 lines */
		margin: 2px 0;
		/* invisible border (will be colored on hover/focus) */
		border: solid 1px #fff;
		border-radius: 0px;
		/* size comes from text & padding (no width/height) */
		padding: 1em 8em;
		/* make sure colors have enough contrast! */
		color: white;
		background-color: black;
		transition: 0.6s ease;
	}

		button:hover {
			background-color: rgba(255, 255, 255, 0.12);
			color: #e74c3c
		}
</style>

<html>
<body>
	<header>
		<div class="title">
			<h1>@ViewBag.Title</h1>
		</div>

		<form method="post" action="../Home/Login">
			<div style="margin-top: 150px;">
				<button style="margin:5px; margin-top: 10px;">Proceed to Login</button>
			</div>
		</form>

		<form method="post" action="../Home/Index">
			<button style="margin:5px; margin-top: 10px;">Go to HomePage</button>
		</form>
	</header>
</body>
</html>